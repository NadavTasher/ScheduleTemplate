{
  "name": "Base",
  "replacements": [
    {
      "name": "name",
      "description": "Event Name",
      "pattern": ".+",
      "needle": "AppName",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "description",
      "description": "Event Description",
      "pattern": ".+",
      "needle": "AppDescription",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "initial-time",
      "description": "Initial Time (e.g. 830 = 8:30)",
      "pattern": "((1[0-9])|(2[0-3])|([0-9])|())(([0-5])([0-9]))",
      "needle": "-1",
      "haystacks": [
        "scripts/backend/schedule/api.php"
      ]
    },
    {
      "name": "terminal-time",
      "description": "Terminal Time (e.g. 1540 = 15:40)",
      "pattern": "((1[0-9])|(2[0-3])|([0-9])|())(([0-5])([0-9]))",
      "needle": "-2",
      "haystacks": [
        "scripts/backend/schedule/api.php"
      ]
    },
    {
      "name": "slot-time",
      "description": "Slot Time (e.g. 5 = 5 Minutes)",
      "pattern": "((1[0-9])|(2[0-3])|([0-9])|())(([0-5])([0-9]))",
      "needle": "-3",
      "haystacks": [
        "scripts/backend/schedule/api.php"
      ]
    },
    {
      "name": "theme",
      "description": "App Theme",
      "pattern": "(#([0-9]|[A-F]|[a-f]){6})",
      "needle": "#FFFFFF",
      "haystacks": [
        "index.html",
        "resources/manifest.json",
        "resources/offline.html",
        "stylesheets/app.css"
      ]
    },
    {
      "name": "layout",
      "description": "App Layout",
      "pattern": ".+",
      "needle": "<!--Your App Body-->",
      "haystacks": [
        "index.html"
      ]
    }
  ]
}