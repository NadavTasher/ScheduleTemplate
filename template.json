{
  "name": "Schedule",
  "replacements": [
    {
      "name": "name",
      "description": "Event Name",
      "pattern": ".+",
      "needle": "AppName",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "description",
      "description": "Event Description",
      "pattern": ".+",
      "needle": "AppDescription",
      "haystacks": [
        "index.html",
        "resources/manifest.json"
      ]
    },
    {
      "name": "initial-time",
      "description": "Initial Time (830 = 8:30)",
      "default": "830",
      "pattern": "((1[0-9])|(2[0-3])|([0-9])|())(([0-5])([0-9]))",
      "needle": "-1",
      "haystacks": [
        "scripts/backend/schedule/api.php"
      ]
    },
    {
      "name": "terminal-time",
      "description": "Terminal Time (1540 = 15:40)",
      "default": "1540",
      "pattern": "((1[0-9])|(2[0-3])|([0-9])|())(([0-5])([0-9]))",
      "needle": "-2",
      "haystacks": [
        "scripts/backend/schedule/api.php"
      ]
    },
    {
      "name": "slot-time",
      "description": "Slot Time (5 = 5 Minutes)",
      "default": "5",
      "pattern": "([0-9]+)",
      "needle": "-3",
      "haystacks": [
        "scripts/backend/schedule/api.php"
      ]
    },
    {
      "name": "theme",
      "description": "App Color",
      "pattern": "(#([0-9]|[A-F]|[a-f]){6})",
      "needle": "#FFFFFF",
      "haystacks": [
        "index.html",
        "resources/manifest.json",
        "resources/offline.html",
        "stylesheets/app.css"
      ]
    },
    {
      "name": "layout",
      "description": "App Layout",
      "pattern": ".+",
      "needle": "<!--Your App Body-->",
      "haystacks": [
        "index.html"
      ]
    },
    {
      "name": "load",
      "description": "App Load Code",
      "pattern": ".+",
      "needle": "// Your Load Code",
      "haystacks": [
        "scripts/frontend/app.js"
      ]
    },
    {
      "name": "code",
      "description": "App Code",
      "pattern": ".+",
      "needle": "// Your App Code",
      "haystacks": [
        "scripts/frontend/app.js"
      ]
    },
    {
      "name": "stylesheet",
      "description": "App Style",
      "pattern": ".+",
      "needle": "/* Your App Style */",
      "haystacks": [
        "stylesheets/app.css"
      ]
    }
  ]
}